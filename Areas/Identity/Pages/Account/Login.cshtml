@page
@model LoginModel

@{
    ViewData["Title"] = "Casa fernandez";
}

<main class="main-content-forms">
    <div class="row container-form">
        <h1 class="title-cf-principal">casa fernadnez</h1>
        <p class="text-vajilla-principal">vajillas</p>
        <hr class="hr-fomr" />
        <div class="col-md-6 container-inputs">
            <h2 class="subtilte-form">Ingresá tus credenciales</h2>
            <section id="Form">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="group">
                        <i class="fa-solid fa-envelope icon"></i>
                        <input class="input" asp-for="Input.Email" class="form-control" autocomplete="username"
                            aria-required="true" placeholder="name@example.com" />

                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <div class="group">
                        <i class="fa-solid fa-lock icon"></i>
                        <input class="input" asp-for="Input.Password" class="form-control"
                            autocomplete="current-password" aria-required="true" placeholder="password" />

                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label checkbox-container">
                            <input class="form-check-input custom-checkbox" asp-for="Input.RememberMe" />
                            <span class="checkmark"></span>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-form"> Inicia sesión</button>

                    </div>
                    <p class="">¿Aún no tienes cuenta?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrate aquí</a>
                    </p>
                    @* <div>
                    <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
                    confirmation</a>
                    </p>
                    </div> *@
                </form>
            </section>
        </div>
        <div class="col-md-6 container-img">
            <div class="content-logo">
                <h1 class="title-logo">CASA FERNANDEZ</h1>
                <p class="text-vajilla">vajillas</p>
                <p class="text-since">since 1984</p>
            </div>


        </div>
    </div>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
